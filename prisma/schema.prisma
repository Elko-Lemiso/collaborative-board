datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id        String    @id @default(cuid())
  name      String
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  strokes   Stroke[]
  stickers  Sticker[]
  User      User[]
}

model Stroke {
  id        String   @id @default(cuid())
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  fromX     Float
  fromY     Float
  toX       Float
  toY       Float
  color     String
  width     Float
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Sticker {
  id        String   @id @default(cuid())
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  imageUrl  String
  x         Float
  y         Float
  width     Float
  height    Float
  rotation  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id             String    @id @default(uuid())
  username       String    @unique
  isConnected    Boolean   @default(false)
  currentBoardId String?
  currentBoard   Board?    @relation(fields: [boardId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  Stroke         Stroke[]
  Sticker        Sticker[]
  boardId        String?
}
