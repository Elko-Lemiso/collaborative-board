datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id        String    @id @default(cuid())
  name      String
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  strokes   Stroke[]
  stickers  Sticker[]
}

model Stroke {
  id        String   @id @default(cuid())
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  fromX     Float
  fromY     Float
  toX       Float
  toY       Float
  color     String
  width     Float
  createdAt DateTime @default(now())
}

model Sticker {
  id        String   @id @default(cuid())
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  imageUrl  String
  x         Float
  y         Float
  width     Float
  height    Float
  rotation  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
